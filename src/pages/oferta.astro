---
import Breadcrumb from '../components/layout/Breadcrumb.astro';
import Layout from '../layouts/Layout.astro';
import Button from '../components/layout/Button.astro';
import ClientLogos from '../components/ClientLogos.astro';
import ProcessStep from '../components/ProcessStep.astro';
import HowWork from '../components/HowWork.astro';

const packages = [
  {
    name: 'Standard',
    price: '3200 zł',
    type: 'jednorazowo',
    features: [
      'Projekt i wdrożenie strony',
      'Do 10 podstron',
      'Hosting + domena na rok',
      'Certyfikat SSL',
      'Optymalizacja SEO',
      'Responsywny design',
      '12 miesięcy gwarancji',
    ],
    cta: 'Zamów teraz',
    link: '/oferta/standard',
  },
  {
    name: 'Abonament',
    price: '199 zł/mc',
    type: 'abonament miesięczny',
    features: [
      '0 zł opłat początkowych',
      'Do 10 podstron',
      'Hosting i domena w cenie',
      'Aktualizacje treści',
      'Wsparcie 24/7',
      'Kopie zapasowe',
      'Raporty SEO',
    ],
    cta: 'Wypróbuj',
    link: '/oferta/abonament',
  },
  {
    name: 'E-commerce',
    price: 'od 7900 zł',
    type: 'sklep internetowy',
    features: [
      'Niestandardowy projekt',
      'Integracja z systemami płatności',
      'Panel zarządzania produktami',
      'Optymalizacja konwersji',
      'Integracja z dostawcami',
      'Szkolenie z obsługi',
      'Roczna gwarancja',
    ],
    cta: 'Zbuduj sklep',
    link: '/oferta/ecommerce',
  },
];

const features = [
  {
    title: 'Mobile First',
    icon: `
      <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"/>
