                  <li class="flex justify-between">
                      <span>Wsparcie 24/7</span>
                      <span>{pkg.name === 'Abonament' ? '✔' : '-'}</span>
                  </li>
                  <li class="flex justify-between">
                      <span>Aktualizacje</span>
                      <span>{pkg.name === 'Abonament' ? '✔' : '-'}</span>
                  </li>
                  <li class="flex justify-between">
                      <span>Blog</span>
                      <span>{pkg.name === 'E-commerce' ? '✔' : 'Dodatek płatny'}</span>
                  </li>
                  <li class="flex justify-between">
                      <span>Czas dodatkowego wsparcia</span>
                      <span>{pkg.name === 'Abonament' ? '-' : '150 zł/h'}</span>
                  </li>
                  <li class="flex justify-between">
                      <span>Wizytówka Google</span>
                      <span>✔</span>
                  </li>
                  <li class="flex justify-between">
                      <span>Podpięcie Google Analytics</span>
                      <span>✔</span>
                  </li>
                  <li class="flex justify-between">
                      <span>Google Search Console</span>
                      <span>✔</span>
                  </li>
                  <li class="flex justify-between">
                      <span>Polityka prywatności RODO</span>
                      <span>✔</span>
