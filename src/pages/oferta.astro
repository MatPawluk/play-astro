      </div>
      <section class="mb-20">
        <div class="container">
          <!-- Case Studies
          <div class="mb-20">
            <h2 data-animate class="mb-12 text-center text-4xl font-bold text-dark dark:text-white md:text-5xl">
              Realne Efekty dla Klientów
            </h2>
            <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
              <div data-animate class="overflow-hidden rounded-xl bg-white dark:bg-dark-2">
                <img 
                  src="/projects/project1.jpg" 
                  alt="Sklep ekologiczny" 
                  class="h-48 w-full object-cover"
                  loading="lazy"
                />
                <div class="p-6">
                  <h3 class="mb-2 text-xl font-bold">EkoSklep.pl</h3>
                  <p class="mb-4 text-body-color dark:text-dark-6">
                    Wzrost ruchu o 230% w ciągu 3 miesięcy dzięki kompleksowemu SEO
                  </p>
                  <div class="flex gap-2">
                    <span class="rounded-full bg-primary/10 px-3 py-1 text-sm text-primary">E-commerce</span>
                    <span class="rounded-full bg-green-100 px-3 py-1 text-sm text-green-800 dark:bg-green-800/30 dark:text-green-500">+45% sprzedaży</span>
                  </div>
                </div>
              </div>
              <!-- Dodaj więcej case studies -->
          <!-- </div>
          </div> -->

          <!-- Proces Realizacji -->
          <HowWork />

          <!-- FAQ -->
          <div class="mb-20">
            <h2
              data-animate
              class="mb-12 text-center text-4xl font-bold text-dark dark:text-white md:text-5xl">
              Częste Pytania
