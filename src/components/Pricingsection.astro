    purchaseLink:'/#',
    offerlist: [
      {title: "Projekt i wdrożenie"},
      {title: "Do 5-ciu podstron"},
      {title: "Darmowy hosting na rok"},
      {title: "Darmowa domena na rok"},
      {title: "Blog + 500 zł"},
    ],
  },
  {
    popular:true,
    packageName:"Abonament",
    price:'199',
    subtitle:'Płatność miesięczna',
    btn:'Wybieram',
    purchaseLink:'/#',
    offerlist: [
      {title: "Projekt i wdrożenie"},
      {title: "Do 5 podstron"},
      {title: "Darmowy hosting"},
      {title: "Darmowa domena"},
      {title: "Całodobowe wsparcie"},
      {title: "Aktualizacje"},
