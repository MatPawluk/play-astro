    </div>

    <!-- Divider -->
    <div class="my-12 h-px bg-gradient-to-r from-transparent via-white/40 to-transparent"></div>

    <!-- Bottom Section -->
    <div class="flex flex-col items-center justify-between gap-4 md:flex-row">
      <p class="text-center text-sm text-gray-400">
        © 2024 PawlukStudio. Wszelkie prawa zastrzeżone.
      </p>
      
      <div class="flex space-x-6">
        <a href="polityka-prywatnosci" 
           class="text-sm text-gray-400 transition-all hover:text-white hover:underline">
          Polityka Prywatności
        </a>
        <!-- <a href="/warunki-korzystania" 
           class="text-sm text-gray-400 transition-all hover:text-white hover:underline">
          Warunki Korzystania
        </a> -->
      </div>
    </div>
  </div>

  <!-- Animated Background Elements -->
  <div class="absolute inset-0 -z-10 opacity-20">
    <div class="absolute left-20 top-20 h-32 w-32 animate-pulse rounded-full bg-purple-500/30 blur-3xl"></div>
    <div class="absolute right-20 bottom-20 h-32 w-32 animate-pulse rounded-full bg-blue-500/30 blur-3xl"></div>
  </div>
</footer>

<style>
  .social-icon {
    @apply text-gray-400 transition-all duration-100 ease-out hover:text-white;
  }
  
  .social-icon svg {
    @apply transform transition-all duration-100 ease-in-out;
  }
  
  .social-icon:hover svg {
    @apply scale-110 drop-shadow-glow;
  }

  @keyframes fade-slide-up {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  footer {
    animation: fade-slide-up 0.3s ease-out;
  }

  .drop-shadow-glow {
    filter: drop-shadow(0 0 8px rgba(255, 255, 255, 0.4));
  }
</style>
<!-- ====== Footer Section End -->