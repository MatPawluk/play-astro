---
const { title, subtitle, imageUrl } = Astro.props;
---

<section class="flex container items-end justify-between p-5 bg-gray-100 dark:bg-black h-64">
    <div class="max-w-3/5">
        <h1 class="text-2xl font-bold text-black dark:text-white">{title}</h1>
        <p class="text-lg text-black dark:text-white">{subtitle}</p>
        <nav class="mt-2">
            <ol class="list-reset flex text-gray-500 dark:text-gray-400">
                <li><a href="/" class="hover:text-gray-700 dark:hover:text-gray-200">Start</a></li>
                <li><span class="mx-2">/</span></li>
                <li>{title}</li>
            </ol>
        </nav>
    </div>
    {imageUrl && <img src={imageUrl} alt={title} class="max-w-1/3 h-auto" />}
</section>
