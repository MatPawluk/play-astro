---
import heroImage from '../assets/hero/hero.png';
import Image from 'astro/components/Image.astro';
import Button from './layout/Button.astro';
---

<!-- ====== Hero Section Start -->
<section id="home" class="custom-bg relative overflow-hidden pt-[120px] md:pt-[50px] lg:pt-[60px]">
  <div class="container">
    <div class="grid place-items-center pb-2 pt-16 md:pb-2 md:pt-12 lg:grid-cols-2">
      <div class="hidden py-6 md:order-1 md:block ">
        <Image
          src={heroImage}
          alt="Astronauta siedzący na księżycu w tle rakieta"
          widths={[200, 400, 600]}
          sizes="(max-width: 800px) 100vw, 620px"
          loading="eager"
        />
      </div>
      <div class="-mx-4 flex flex-wrap items-center">
        <div class="w-full px-4">
          <span class="block mb-2.5 mt-2.5 text-white slide-in-left">Spersonalizowane Projekty, Własnoręcznie Kodowane
          </span>
          <h1
            class="text-5xl font-bold text-white lg:text-6xl lg:tracking-tight xl:text-7xl xl:tracking-tighter slide-in-left">
            Strona dopasowana do Ciebie
          </h1>
          <p class="mt-4 max-w-xl text-lg text-white slide-in-left">
            Bez kreatorów stron i WordPressa. Oferuje w 100% ręcznie kodowane strony internetowe o
            doskonałych wynikach, już od 199zł/miesiąc.
          </p>
          <div class="mt-6 flex flex-col gap-3 sm:flex-row">
            <Button href="#kontakt" text="Darmowa kosultacja" />
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="w-full px-4">
    <div class="mx-auto w-full text-center md:text-right">
      <p
        class="relative translate-y-[20%] text-7xl font-bold text-white dark:text-dark md:text-7xl lg:text-9xl">
        freelance
      </p>
      
    </div>
  </div>
  <!-- ====== Hero Section End -->
</section>
