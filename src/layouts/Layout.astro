---
import Footer from '../components/layout/Footer.astro';
import Header from '../components/layout/Header.astro';
import BackToTop from '../components/layout/BackToTop.astro';

interface Props {
  description: string;
  title: string;
  image?: string;
}

const { description, title, image } = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <script type="application/ld+json" is:inline>
      {
        "@context": "https://schema.org",
        "@type": "ServiceBusiness",
        "name": "Pawluk Studio",
        "image": "https://pawlukstudio.pl/assets/logo/logo.svg",
        "description": "Profesjonalne tworzenie stron internetowych i sklepów online dla firm z Lęborka i Słupska",
        "priceRange": "$$",
        "address": {
          "@type": "PostalAddress",
          "addressLocality": "Lębork",
          "addressRegion": "Pomorskie",
          "postalCode": "84-300",
          "addressCountry": "PL"
        },
        "geo": {
          "@type": "GeoCoordinates",
          "latitude": 54.539578,
          "longitude": 17.750126
        },
        "url": "https://pawlukstudio.pl",
        "sameAs": [
          "https://facebook.com/profile.php?id=61567535872481",
          "https://linkedin.com/in/mateusz-pawluk-513368271"
        ],
        "serviceArea": {
          "@type": "AdministrativeArea",
          "name": ["Lębork", "Słupsk", "Pomorskie"]
        },
        "openingHoursSpecification": {
          "@type": "OpeningHoursSpecification",
          "dayOfWeek": [
            "Monday",
            "Tuesday",
            "Wednesday",
            "Thursday",
            "Friday",
            "Saturday",
            "Sunday"
          ],
          "opens": "00:00",
          "closes": "23:59"
        },
        "openingHours": "24/7"
      }
    </script>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="geo.region" content="PL-PM" />
    <meta name="geo.placename" content="Lębork" />
    <meta name="ICBM" content="54.5431, 17.7479" />
    <meta name="author" content="Pawluk Studio" />
    <meta name="description" content={description} />
    <meta
      name="keywords"
      content="tworzenie stron internetowych Lębork, projektowanie stron, SEO, strony wizytówki Słupsk, tworzenie sklepów internetowych, Astro, małe biznesy"
    />

    <!-- Open Graph for social media -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:type" content="website" />

    <!-- Twitter Cards -->
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={image} />

    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="canonical" href={Astro.url.href} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <script is:inline>
      document.documentElement.classList.add('js');
    </script>
    <script src="https://www.googletagmanager.com/gtag/js?id=G-0PX8PYM46H" is:inline></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag('js', new Date());

      gtag('config', 'G-0PX8PYM46H');
    </script>

    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>

  <body class="bg-gray-100 dark:bg-black">
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
    <BackToTop />
    <style is:global>
      @import url('https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap');

      body {
        font-family: 'Inter', sans-serif;
      }
      html {
        scroll-behavior: smooth;
      }

      .apper {
        animation: apper linear;
        animation-timeline: view();
        animation-range: entry 0% cover 30%;
      }

      .slide-in-left {
        animation: slide-in-left 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94) both;
      }

      .slide-in-left-view {
        animation: slide-in-left 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94) both;
        animation-timeline: view();
        animation-range: entry 0% cover 30%;
      }

      @keyframes apper {
        0% {
          opacity: 0;
          scale: 0.5;
        }

        100% {
          opacity: 1;
          scale: 1;
        }
      }

      @keyframes slide-in-left {
        0% {
          transform: translateX(-100%);
          opacity: 0;
        }
        100% {
          transform: translateX(0);
          opacity: 1;
        }
      }

      .one.slide-in-left {
        animation-delay: 0s; /* Pierwszy element */
      }

      .two.slide-in-left {
        animation-delay: 0.3s; /* Drugi element */
      }

      .three.slide-in-left {
        animation-delay: 0.6s; /* Trzeci element */
      }

      /* Animacja */
      .slide-down {
        animation: slide-down 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94) both;
        animation-fill-mode: forwards; /* Ustawienie końcowego stanu elementu po animacji */
      }

      /* Definicja samej animacji */
      @keyframes slide-down {
        0% {
          transform: translateY(100%);
          opacity: 0;
        }
        100% {
          transform: translateY(20%);
          opacity: 1;
        }
      }

      .custom-bg {
        background-image: linear-gradient(
          135deg,
          transparent 45%,
          #9c2531 45%,
          #9c2531 55%,
          transparent 0
        );
        background-size: 5px 5px;
        background-color: #c2001c;
      }
      .sticky-header {
        @apply fixed z-[9999] bg-white/80 transition dark:bg-dark/80;
        backdrop-filter: blur(5px);
        box-shadow: inset 0 -1px 0 0 rgba(0, 0, 0, 0.1);
      }

      .sticky-header .navbar-logo {
        @apply py-2;
      }

      .sticky-header #navbarToggler span {
        @apply bg-dark dark:bg-white;
      }

      .sticky-header #navbarCollapse li > a {
        @apply text-dark hover:text-primary hover:opacity-100 dark:text-white dark:hover:text-primary;
      }
      #navbarCollapse li .ud-menu-scroll.active {
        @apply opacity-70;
      }
      .sticky-header #navbarCollapse li .ud-menu-scroll.active {
        @apply text-primary opacity-100;
      }
      .sticky-header .loginBtn {
        @apply text-dark hover:text-primary hover:opacity-100 dark:text-white dark:hover:text-primary;
      }

      .sticky-header .signUpBtn {
        @apply bg-primary text-white hover:bg-blue-dark hover:text-white;
      }

      .sticky-header #themeSwitcher span {
        @apply text-dark dark:text-white;
      }

      .navbarTogglerActive > span:nth-child(1) {
        @apply top-[7px] rotate-45 transform;
      }
      .navbarTogglerActive > span:nth-child(2) {
        @apply opacity-0;
      }
      .navbarTogglerActive > span:nth-child(3) {
        @apply top-[-8px] rotate-[135deg];
      }

      .common-carousel .swiper-button-next:after,
      .common-carousel .swiper-button-prev:after {
        @apply hidden;
      }

      .common-carousel .swiper-button-next,
      .common-carousel .swiper-button-prev {
        @apply !static m-0 h-12 w-12 rounded-lg bg-white text-dark shadow-testimonial-btn duration-200 ease-out hover:bg-primary hover:text-white hover:shadow-none dark:bg-dark dark:text-white;
      }

      .common-carousel .swiper-button-next svg,
      .common-carousel .swiper-button-prev svg {
        @apply h-auto w-auto;
      }

      [data-animate] {
        -webkit-transform: translateY(50px);
        -moz-transform: translateY(50px);
        -ms-transform: translateY(50px);
        transform: translateY(50px);
        opacity: 0.001;
        -webkit-transition:
          opacity 0.5s,
          -webkit-transform 0.5s;
        transition:
          opacity 0.5s,
          transform 0.5s;
      }

      [data-animate].animate-fade-in {
        -webkit-transform: translateY(0);
        -moz-transform: translateY(0);
        -ms-transform: translateY(0);
        transform: translateY(0);
        opacity: 1;
      }
      @media (max-width: 768px) {
        [data-animate] {
          transition:
            transform 0.3s ease-in-out,
            opacity 0.3s ease-in-out;
          opacity: 0;
          transform: translateY(30px);
        }
        [data-animate].in-view {
          opacity: 1;
          transform: translateY(0);
        }
      }
      details[open] summary svg {
        transform: rotate(180deg);
      }

      .button-hover {
        transition: transform 0.3s ease;
      }
      .button-hover:hover {
        transform: translateY(-2px);
      }
    </style>
    <script>
      import '../scripts/taos.js';
      import '../scripts/stickymenu.js';
      import '../scripts/scrolltop.js';
      import '../scripts/darkMode.js';
      import '../scripts/dropdown.js';
      import '../scripts/init.js';
    </script>
    <script is:inline>
      const r = () => {
        const t = document.querySelectorAll('[data-animate]');
        if (t.length === 0) return;
        const a = new IntersectionObserver(
          e => {
            e.forEach(n => {
              n.isIntersecting && n.target.classList.add('animate-fade-in');
            });
          },
          {
            threshold: 0.5,
          }
        );
        t.forEach(e => {
          a.observe(e);
        });
      };
      window.addEventListener('scroll', r);
      window.addEventListener('load', r);
    </script>
    <script src="https://unpkg.com/taos@1.0.5/dist/taos.js"></script>
  </body>
</html>
